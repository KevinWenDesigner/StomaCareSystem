/* nurse-app/app.wxss */

/* 颜色变量 */
page {
  --primary-color: #3B82F6;
  --primary-dark: #2563EB;
  --primary-light: #60A5FA;
  
  --success-color: #10B981;
  --success-dark: #059669;
  --success-light: #34D399;
  
  --warning-color: #F59E0B;
  --warning-dark: #D97706;
  --warning-light: #FBBF24;
  
  --danger-color: #EF4444;
  --danger-dark: #DC2626;
  --danger-light: #F87171;
  
  --gray-50: #F9FAFB;
  --gray-100: #F3F4F6;
  --gray-200: #E5E7EB;
  --gray-300: #D1D5DB;
  --gray-400: #9CA3AF;
  --gray-500: #6B7280;
  --gray-600: #4B5563;
  --gray-700: #374151;
  --gray-800: #1F2937;
  --gray-900: #111827;
}

/* 通用布局 */
.container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.safe-area {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid var(--gray-100);
}

.card-header {
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--gray-800);
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: var(--gray-500);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 36rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
  cursor: pointer;
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-primary:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

.btn-success {
  background: var(--success-color);
  color: #FFFFFF;
}

.btn-success:active {
  background: var(--success-dark);
  transform: scale(0.98);
}

.btn-warning {
  background: var(--warning-color);
  color: #FFFFFF;
}

.btn-warning:active {
  background: var(--warning-dark);
  transform: scale(0.98);
}

.btn-danger {
  background: var(--danger-color);
  color: #FFFFFF;
}

.btn-danger:active {
  background: var(--danger-dark);
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-outline:active {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-ghost {
  background: transparent;
  color: var(--gray-600);
  border: 2rpx solid var(--gray-300);
}

.btn-ghost:active {
  background: var(--gray-100);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid var(--gray-200);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: var(--gray-800);
  background: #FFFFFF;
  transition: all 0.2s;
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.input-error {
  border-color: var(--danger-color);
}

.input-error:focus {
  border-color: var(--danger-color);
  box-shadow: 0 0 0 4rpx rgba(239, 68, 68, 0.1);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-primary {
  background: var(--primary-light);
  color: var(--primary-dark);
}

.tag-success {
  background: var(--success-light);
  color: var(--success-dark);
}

.tag-warning {
  background: var(--warning-light);
  color: var(--warning-dark);
}

.tag-danger {
  background: var(--danger-light);
  color: var(--danger-dark);
}

.tag-gray {
  background: var(--gray-200);
  color: var(--gray-700);
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.badge-primary {
  background: var(--primary-color);
}

.badge-success {
  background: var(--success-color);
}

.badge-warning {
  background: var(--warning-color);
}

.badge-danger {
  background: var(--danger-color);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: var(--gray-200);
  margin: 32rpx 0;
}

.divider-vertical {
  width: 2rpx;
  background: var(--gray-200);
  margin: 0 32rpx;
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid var(--gray-200);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 滑入动画 */
.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { transform: translateY(20rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 缩放动画 */
.scale-in {
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* 脉冲动画 */
.pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 闪烁动画 */
.shimmer {
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .card {
    padding: 24rpx;
  }
  
  .btn {
    padding: 20rpx 32rpx;
    font-size: 28rpx;
  }
  
  .input {
    padding: 20rpx 28rpx;
    font-size: 28rpx;
  }
} 