/* patient-app/app.wxss */

/* 颜色变量 - Figma 风格蓝白配色 */
page {
  /* 主色调 - Figma 风格的鲜明蓝色 */
  --primary-color: #0078FF;
  --primary-dark: #0066DD;
  --primary-light: #4D9FFF;
  --primary-lighter: #E5F1FF;
  
  /* 辅助色 */
  --success-color: #00C875;
  --success-dark: #00A562;
  --success-light: #B3E5D3;
  
  --warning-color: #FFAB00;
  --warning-dark: #FF991F;
  --warning-light: #FFE5B3;
  
  --danger-color: #FF3366;
  --danger-dark: #E6003D;
  --danger-light: #FFB3CC;
  
  /* 灰度色阶 - 更清爽的灰色 */
  --gray-50: #FAFBFC;
  --gray-100: #F6F7F9;
  --gray-200: #EBEEF2;
  --gray-300: #DFE3E8;
  --gray-400: #B0B8C1;
  --gray-500: #808A98;
  --gray-600: #676E7B;
  --gray-700: #4F5762;
  --gray-800: #323942;
  --gray-900: #1F2532;
  
  /* 背景色 */
  --bg-primary: #FFFFFF;
  --bg-secondary: #FAFBFC;
}

/* 通用布局 */
.container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.safe-area {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #F3F4F6;
}

.card-header {
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: #6B7280;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 36rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
  cursor: pointer;
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-primary:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

.btn-success {
  background: var(--success-color);
  color: #FFFFFF;
}

.btn-success:active {
  background: var(--success-dark);
  transform: scale(0.98);
}

.btn-warning {
  background: var(--warning-color);
  color: #FFFFFF;
}

.btn-warning:active {
  background: var(--warning-dark);
  transform: scale(0.98);
}

.btn-danger {
  background: var(--danger-color);
  color: #FFFFFF;
}

.btn-danger:active {
  background: var(--danger-dark);
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-outline:active {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-ghost {
  background: transparent;
  color: var(--gray-600);
  border: 2rpx solid var(--gray-300);
}

.btn-ghost:active {
  background: var(--gray-100);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #4B5563;
  border: 2rpx solid #E5E7EB;
  background: #FFFFFF;
  transition: all 0.2s;
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(0, 120, 255, 0.1);
}

.input.error {
  border-color: var(--danger-color);
  box-shadow: 0 0 0 4rpx rgba(255, 51, 102, 0.1);
}

.input.success {
  border-color: var(--success-color);
  box-shadow: 0 0 0 4rpx rgba(0, 200, 117, 0.1);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
}

.tag-primary {
  background: var(--primary-lighter);
  color: var(--primary-dark);
}

.tag-success {
  background: var(--success-light);
  color: var(--success-dark);
}

.tag-warning {
  background: var(--warning-light);
  color: var(--warning-dark);
}

.tag-danger {
  background: var(--danger-light);
  color: var(--danger-dark);
}

.tag-gray {
  background: #E5E7EB;
  color: #374151;
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.badge-primary {
  background: var(--primary-color);
}

.badge-success {
  background: var(--success-color);
}

.badge-warning {
  background: var(--warning-color);
}

.badge-danger {
  background: var(--danger-color);
}

.badge-gray {
  background: #6B7280;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #E5E7EB;
  margin: 32rpx 0;
}

.divider-vertical {
  width: 2rpx;
  background: var(--gray-200);
  margin: 0 32rpx;
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid var(--gray-200);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 滑入动画 */
.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { transform: translateY(20rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 缩放动画 */
.scale-in {
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* 脉冲动画 */
.pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 闪烁动画 */
.shimmer {
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .card {
    padding: 24rpx;
  }
  
  .btn {
    padding: 20rpx 32rpx;
    font-size: 28rpx;
  }
  
  .input {
    padding: 20rpx 28rpx;
    font-size: 28rpx;
  }
} 