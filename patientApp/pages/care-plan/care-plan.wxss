/* patient-app/pages/care-plan/care-plan.wxss */
/* 统一Figma风格 - 与首页一致 */

.container {
  min-height: 100vh;
  background: var(--bg-secondary); /* 浅灰白色背景，与首页一致 */
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 页面头部 - Figma风格 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: 700;
  color: var(--gray-900);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  display: flex;
  align-items: center;
}

.share-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background: var(--primary-lighter);
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
  opacity: 0.8;
}

/* 计划内容 */
.plan-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 标签页导航 - Figma风格 */
.tab-navigation {
  display: flex;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.tab-item {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.tab-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-700);
}

.tab-item.active .tab-text {
  color: #FFFFFF;
}

/* 总览页面 */
.overview-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 信息卡片 - Figma风格 */
.info-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.edit-btn {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  background: var(--primary-lighter);
  border: none;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 26rpx;
  color: var(--gray-600);
}

.info-value {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

/* 进度部分 - Figma风格 */
.progress-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.progress-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-card {
  padding: 24rpx;
  background: var(--gray-50);
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.progress-percent {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-desc {
  font-size: 24rpx;
  color: var(--gray-600);
}

/* 医生部分 - Figma风格 */
.doctor-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.doctor-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.doctor-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.doctor-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.doctor-dept {
  font-size: 26rpx;
  color: var(--gray-600);
}

.doctor-phone {
  font-size: 26rpx;
  color: var(--primary-color);
}

.contact-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  padding: 16rpx 28rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.contact-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.review-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.review-label {
  font-size: 24rpx;
  color: var(--gray-600);
}

/* 任务页面 */
.tasks-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tasks-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.tasks-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.add-task-btn {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  background: var(--primary-lighter);
  border: none;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.task-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.task-item.completed {
  opacity: 0.7;
  background: var(--success-light);
  border-color: var(--success-color);
}

.task-content {
  cursor: pointer;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.task-time {
  font-size: 24rpx;
  color: var(--gray-600);
}

.task-status {
  margin-left: 16rpx;
}

.status-completed {
  font-size: 22rpx;
  color: #10B981;
  background: rgba(16, 185, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-pending {
  font-size: 22rpx;
  color: #F59E0B;
  background: rgba(245, 158, 11, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.task-desc {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.task-priority {
  display: flex;
  justify-content: flex-end;
}

.priority-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.priority-tag.high {
  background: #FEE2E2;
  color: #DC2626;
}

.priority-tag.medium {
  background: #FEF3C7;
  color: #F59E0B;
}

.priority-tag.low {
  background: #D1FAE5;
  color: #059669;
}

/* 目标页面 */
.goals-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.goals-header {
  margin-bottom: 16rpx;
}

.goals-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.goal-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.goal-item.completed {
  background: var(--success-light);
  border-color: var(--success-color);
}

.goal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.goal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.goal-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.goal-status.completed {
  background: var(--success-light);
  color: var(--success-dark);
}

.goal-status.in-progress {
  background: rgba(245, 158, 11, 0.1);
  color: #F59E0B;
}

.goal-desc {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.goal-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--gray-600);
  text-align: right;
}

/* 建议页面 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tips-header {
  margin-bottom: 16rpx;
}

.tips-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  border-left: 4rpx solid;
}

.tip-item.high {
  border-left-color: #DC2626;
}

.tip-item.medium {
  border-left-color: #F59E0B;
}

.tip-item.low {
  border-left-color: #10B981;
}

.tip-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.tip-priority {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tip-priority.high {
  background: #FEE2E2;
  color: #DC2626;
}

.tip-priority.medium {
  background: #FEF3C7;
  color: #F59E0B;
}

.tip-priority.low {
  background: #D1FAE5;
  color: #059669;
}

.tip-content {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.5;
}

.tips-actions {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.tips-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  padding: 20rpx 36rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.tips-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

/* 底部操作按钮 - Figma风格 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--gray-200);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.action-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.action-btn.secondary {
  background: var(--gray-100);
  color: var(--gray-900);
  border: 1rpx solid var(--gray-200);
}

.action-btn.secondary:active {
  background: var(--gray-200);
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
} 