/* patient-app/pages/care-plan/care-plan.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  padding: 32rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  display: flex;
  align-items: center;
}

.share-btn {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 0.8;
}

/* 计划内容 */
.plan-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 标签页导航 */
.tab-navigation {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tab-item {
  flex: 1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.3);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
}

/* 总览页面 */
.overview-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #10B981;
}

.edit-btn {
  font-size: 24rpx;
  color: #10B981;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(16, 185, 129, 0.1);
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #6B7280;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

/* 进度部分 */
.progress-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #10B981;
}

.progress-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-card {
  padding: 20rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.progress-percent {
  font-size: 24rpx;
  font-weight: 600;
  color: #10B981;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-desc {
  font-size: 22rpx;
  color: #6B7280;
}

/* 医生部分 */
.doctor-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.doctor-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.doctor-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.doctor-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.doctor-dept {
  font-size: 24rpx;
  color: #6B7280;
}

.doctor-phone {
  font-size: 24rpx;
  color: #10B981;
}

.contact-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
}

.review-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.review-label {
  font-size: 22rpx;
  color: #6B7280;
}

/* 任务页面 */
.tasks-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tasks-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.tasks-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.add-task-btn {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.2);
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.task-item.completed {
  opacity: 0.7;
  background: rgba(16, 185, 129, 0.1);
  border-color: #10B981;
}

.task-content {
  cursor: pointer;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.task-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.task-time {
  font-size: 22rpx;
  color: #6B7280;
}

.task-status {
  margin-left: 16rpx;
}

.status-completed {
  font-size: 22rpx;
  color: #10B981;
  background: rgba(16, 185, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-pending {
  font-size: 22rpx;
  color: #F59E0B;
  background: rgba(245, 158, 11, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.task-desc {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.task-priority {
  display: flex;
  justify-content: flex-end;
}

.priority-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.priority-tag.high {
  background: #FEE2E2;
  color: #DC2626;
}

.priority-tag.medium {
  background: #FEF3C7;
  color: #F59E0B;
}

.priority-tag.low {
  background: #D1FAE5;
  color: #059669;
}

/* 目标页面 */
.goals-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.goals-header {
  margin-bottom: 16rpx;
}

.goals-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.goal-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.goal-item.completed {
  background: rgba(16, 185, 129, 0.1);
  border-color: #10B981;
}

.goal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.goal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.goal-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.goal-status.completed {
  background: rgba(16, 185, 129, 0.1);
  color: #10B981;
}

.goal-status.in-progress {
  background: rgba(245, 158, 11, 0.1);
  color: #F59E0B;
}

.goal-desc {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.goal-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #6B7280;
  text-align: right;
}

/* 建议页面 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tips-header {
  margin-bottom: 16rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-left: 4rpx solid;
}

.tip-item.high {
  border-left-color: #DC2626;
}

.tip-item.medium {
  border-left-color: #F59E0B;
}

.tip-item.low {
  border-left-color: #10B981;
}

.tip-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.tip-priority {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tip-priority.high {
  background: #FEE2E2;
  color: #DC2626;
}

.tip-priority.medium {
  background: #FEF3C7;
  color: #F59E0B;
}

.tip-priority.low {
  background: #D1FAE5;
  color: #059669;
}

.tip-content {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.5;
}

.tips-actions {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.tips-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #FFFFFF;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.4);
}

.action-btn.secondary {
  background: #F3F4F6;
  color: #374151;
  border: 2rpx solid #D1D5DB;
}

.action-btn.secondary:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
} 