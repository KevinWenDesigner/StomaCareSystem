/* patient-app/pages/camera/compare/compare.wxss */

.container {
  min-height: 100vh;
  background: #F7F8FA;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title .title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-title .subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.action-btn .icon {
  font-size: 32rpx;
}

.action-btn .text {
  font-size: 20rpx;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: white;
  margin: 0 30rpx;
  margin-top: -20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  position: relative;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: bold;
  background: linear-gradient(135deg, rgba(0, 120, 255, 0.1) 0%, rgba(0, 102, 221, 0.1) 100%);
}

.tab-text {
  position: relative;
}

.tab-item.active .tab-text::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -8rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 3rpx;
}

/* 内容区域 */
.content {
  height: calc(100vh - 240rpx);
  padding: 30rpx;
}

/* 整体评估卡片 */
.overall-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.overall-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.overall-content {
  flex: 1;
}

.overall-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.overall-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.overall-time {
  font-size: 24rpx;
  color: #999;
}

.overall-time .label {
  color: #999;
}

.overall-time .value {
  color: #333;
  font-weight: bold;
}

/* 对比区域 */
.comparison-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.section-title .icon {
  font-size: 36rpx;
}

/* 图片对比 */
.image-comparison {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.image-item {
  flex: 1;
  position: relative;
}

.image-label {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.label-date {
  font-size: 22rpx;
  color: #999;
}

.comparison-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  object-fit: cover;
  border: 2rpx solid #F0F0F0;
}

.image-score {
  position: absolute;
  top: 80rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

.image-divider {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-top: 100rpx;
}

.divider-line {
  width: 2rpx;
  height: 40rpx;
  background: #E0E0E0;
}

.divider-icon {
  color: var(--primary-color);
  font-size: 32rpx;
  font-weight: bold;
}

/* 指标对比 */
.metric-item {
  margin-bottom: 40rpx;
}

.metric-item:last-child {
  margin-bottom: 0;
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.metric-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.metric-change {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.metric-change.improved {
  background: #07C16020;
  color: #07C160;
}

.metric-change.worse {
  background: #FA515120;
  color: #FA5151;
}

.metric-change.stable {
  background: #FFC10720;
  color: #FFC107;
}

.change-icon {
  font-weight: bold;
}

.metric-bars {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bar-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bar-label {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.bar-container {
  flex: 1;
  height: 32rpx;
  background: #F0F0F0;
  border-radius: 16rpx;
  overflow: hidden;
}

.bar {
  height: 100%;
  border-radius: 16rpx;
  transition: width 0.5s ease;
}

.bar-before {
  background: linear-gradient(90deg, #FF9500 0%, #FFCC00 100%);
}

.bar-after {
  background: linear-gradient(90deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.bar-healing {
  background: linear-gradient(90deg, #07C160 0%, #1AAD19 100%) !important;
}

.bar-value {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

/* 护理建议 */
.suggestions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: #F7F8FA;
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

.suggestion-icon {
  font-size: 32rpx;
  line-height: 1;
}

.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 趋势分析 */
.period-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.period-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.period-item.active {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(0, 120, 255, 0.3);
}

/* 图表区域 */
.chart-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.chart-container {
  height: 400rpx;
  position: relative;
}

.simple-chart {
  height: 100%;
}

.chart-lines {
  display: flex;
  align-items: flex-end;
  height: 100%;
  gap: 20rpx;
}

.chart-line {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.line-point {
  width: 100%;
  background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 8rpx 8rpx 0 0;
  transition: height 0.5s ease;
  min-height: 40rpx;
}

.line-label {
  font-size: 20rpx;
  color: #999;
  transform: rotate(-45deg);
  white-space: nowrap;
}

/* 指标趋势 */
.trend-metrics {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.trend-metric-item {
  margin-bottom: 40rpx;
}

.trend-metric-item:last-child {
  margin-bottom: 0;
}

.metric-legend {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.metric-trend {
  display: flex;
  gap: 12rpx;
}

.trend-bar {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: flex-end;
}

.trend-point {
  width: 100%;
  border-radius: 6rpx 6rpx 0 0;
  transition: height 0.5s ease;
  min-height: 20rpx;
}

/* 统计摘要 */
.stats-summary {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, rgba(0, 120, 255, 0.12) 0%, rgba(0, 102, 221, 0.12) 100%);
  border-radius: 16rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-unit {
  display: block;
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
}

/* 底部安全区域 */
.bottom-safe-area {
  height: 40rpx;
}

