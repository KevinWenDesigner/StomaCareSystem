/* patient-app/pages/camera/camera.wxss */

/* 页面容器，白色背景，Figma 风格 */
.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  margin-bottom: 48rpx;
  text-align: center;
}

.page-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
  display: block;
}

/* 自动拍照模式 */
.auto-capture-section {
  margin-bottom: 48rpx;
}

.auto-capture-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.auto-capture-header {
  margin-bottom: 24rpx;
}

.auto-capture-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
}

.auto-capture-desc {
  font-size: 24rpx;
  color: var(--gray-600);
  display: block;
}

.auto-capture-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.auto-capture-btn {
  background: var(--success-color);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.auto-capture-btn.active {
  background: var(--danger-color);
}

.auto-capture-btn:active {
  transform: scale(0.95);
}

.countdown-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--warning-color);
  animation: pulse 1s infinite;
  box-shadow: 0 8rpx 24rpx rgba(255, 171, 0, 0.3);
}

.countdown-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
  margin-bottom: 4rpx;
}

.countdown-label {
  font-size: 20rpx;
  color: #FFFFFF;
  opacity: 0.9;
  line-height: 1;
}

@keyframes pulse {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.4);
  }
  50% { 
    transform: scale(1.1);
    box-shadow: 0 12rpx 32rpx rgba(245, 158, 11, 0.6);
  }
}

/* 拍照区域 */
.camera-section {
  margin-bottom: 48rpx;
}

.camera-preview {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-placeholder {
  text-align: center;
  color: var(--gray-500);
}

.camera-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.camera-tip {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 12rpx;
}

.camera-subtip {
  font-size: 24rpx;
  color: var(--gray-600);
  display: block;
}

.camera-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

.camera-actions {
  display: flex;
  gap: 24rpx;
}

.camera-btn {
  flex: 1;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 20rpx;
  padding: 32rpx 48rpx;
  font-size: 36rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
  position: relative;
  overflow: hidden;
}

/* 按钮光效 */
.camera-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.camera-btn:active::before {
  left: 100%;
}

.camera-btn.outline {
  background: #FFFFFF;
  color: #3B82F6;
  border: 3rpx solid #3B82F6;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

.camera-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* AI分析进度 */
.analysis-section {
  margin-bottom: 48rpx;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.analysis-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  position: relative;
  overflow: hidden;
}

/* 圆形进度指示器 */
.circular-progress {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
}

.progress-ring {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 120, 255, 0.25);
  animation: rotate360 3s linear infinite;
  position: relative;
  z-index: 2;
}

@keyframes rotate360 {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.progress-percent {
  font-size: 72rpx; /* 从56rpx增大到72rpx */
  font-weight: 800;
  color: #FFFFFF;
  display: block;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.progress-label {
  font-size: 26rpx; /* 从20rpx增大到26rpx */
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-top: 4rpx;
}

/* 扫描线动画 */
.scanning-line {
  position: absolute;
  top: 0;
  left: 50%;
  width: 2rpx;
  height: 200rpx;
  background: linear-gradient(to bottom, transparent, rgba(0, 200, 117, 0.8), transparent);
  animation: scan 2s linear infinite;
  transform-origin: center;
  z-index: 1;
}

@keyframes scan {
  0% {
    transform: translateX(-50%) rotate(0deg);
  }
  100% {
    transform: translateX(-50%) rotate(360deg);
  }
}

/* 当前步骤显示 */
.current-step {
  text-align: center;
  margin-bottom: 32rpx;
  animation: stepPulse 0.5s ease;
}

@keyframes stepPulse {
  0% {
    transform: scale(0.9);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.step-icon-large {
  font-size: 80rpx; /* 从64rpx增大到80rpx */
  display: block;
  margin-bottom: 16rpx;
  animation: iconBounce 0.6s ease;
}

@keyframes iconBounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.step-text-large {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
}

/* 进度条 */
.progress-bar-wrapper {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: var(--gray-200);
  border-radius: 8rpx;
  overflow: visible;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 8rpx;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 16rpx rgba(0, 120, 255, 0.4);
  animation: shimmer 2s linear infinite;
  background-size: 200% 100%;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.progress-glow {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: radial-gradient(circle, rgba(0, 120, 255, 0.8) 0%, transparent 70%);
  border-radius: 50%;
  transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  animation: pulse 1s infinite;
}

/* 分析步骤列表 */
.analysis-steps-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.step-item-v2 {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: var(--gray-100);
  border-radius: 12rpx;
  opacity: 0.4;
  transition: all 0.4s ease;
  position: relative;
  border: 2rpx solid transparent;
}

.step-item-v2.active {
  opacity: 1;
  background: var(--primary-lighter);
  border-color: var(--primary-light);
  animation: stepActivate 0.5s ease;
}

@keyframes stepActivate {
  0% {
    transform: scale(0.9);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.step-item-v2.completed {
  background: var(--success-light);
  border-color: var(--success-color);
}

.step-dot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: var(--success-light);
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-item-v2.completed .step-dot {
  background: var(--success-color);
}

.step-check {
  font-size: 12rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.step-icon-small {
  font-size: 40rpx; /* 从32rpx增大到40rpx */
  margin-bottom: 12rpx;
}

.step-text-small {
  font-size: 24rpx;
  color: var(--gray-700);
  text-align: center;
  line-height: 1.3;
  font-weight: 500;
}

.step-item-v2.completed .step-text-small {
  color: var(--success-color);
  font-weight: 700;
}

/* 分析提示 */
.analysis-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: var(--primary-lighter);
  border-radius: 12rpx;
  border: 1rpx dashed var(--primary-light);
}

.tip-icon {
  font-size: 28rpx; /* 从24rpx增大到28rpx */
  animation: tipBlink 1.5s ease infinite;
}

@keyframes tipBlink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.tip-text {
  font-size: 26rpx;
  color: var(--gray-600);
  font-style: italic;
}

/* 评估结果 */
.result-section {
  margin-bottom: 48rpx;
  animation: resultFadeIn 0.8s ease;
}

@keyframes resultFadeIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.95);
  }
  60% {
    transform: translateY(-5rpx) scale(1.02);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.section-header {
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--gray-600);
  display: block;
}

.result-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  position: relative;
  overflow: hidden;
}

/* 结果卡片背景光效 */
.result-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(0, 120, 255, 0.05) 0%, transparent 70%);
  animation: bgPulse 3s ease infinite;
  z-index: 0;
  pointer-events: none;
}

@keyframes bgPulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

/* 确保内容在光效之上 */
.result-header,
.result-desc,
.analysis-metrics,
.result-details {
  position: relative;
  z-index: 1;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.result-score {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.result-score.score-1 {
  background: var(--success-color);
  color: #FFFFFF;
}

.result-score.score-2 {
  background: var(--warning-color);
  color: #FFFFFF;
}

.result-score.score-3 {
  background: var(--danger-color);
  color: #FFFFFF;
}

.score-text {
  font-size: 36rpx;
  font-weight: 700;
}

.result-desc {
  font-size: 32rpx;
  color: #374151;
  line-height: 1.6;
  margin-bottom: 32rpx;
  font-weight: 500;
}

/* AI分析指标 */
.analysis-metrics {
  margin-bottom: 32rpx;
}

.metric-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  animation: metricSlideIn 0.6s ease backwards;
}

.metric-item:nth-child(1) {
  animation-delay: 0.1s;
}

.metric-item:nth-child(2) {
  animation-delay: 0.2s;
}

.metric-item:nth-child(3) {
  animation-delay: 0.3s;
}

.metric-item:nth-child(4) {
  animation-delay: 0.4s;
}

@keyframes metricSlideIn {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.metric-label {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
  width: 120rpx;
  flex-shrink: 0;
}

.metric-bar {
  flex: 1;
  height: 10rpx;
  background: rgba(59, 130, 246, 0.15);
  border-radius: 5rpx;
  overflow: hidden;
  margin: 0 16rpx;
  position: relative;
}

.metric-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #3B82F6 50%, #8B5CF6 100%);
  border-radius: 5rpx;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 12rpx rgba(59, 130, 246, 0.4);
  animation: shimmer 2s linear infinite;
  background-size: 200% 100%;
}

.metric-value {
  font-size: 24rpx;
  color: #3B82F6;
  font-weight: 700;
  width: 60rpx;
  text-align: right;
  flex-shrink: 0;
  animation: numberCount 0.8s ease;
}

@keyframes numberCount {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.result-details {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  padding-top: 24rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 30rpx;
  color: #374151;
  font-weight: 700;
  width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 30rpx;
  color: #6B7280;
  line-height: 1.5;
  font-weight: 500;
}

/* 历史记录 */
.history-section {
  margin-bottom: 48rpx;
}

.view-all-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.empty-state {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E40AF;
  display: block;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.history-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.history-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.history-content {
  flex: 1;
  min-width: 0;
}

.history-time {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
  margin-bottom: 8rpx;
}

.history-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E40AF;
  display: block;
  margin-bottom: 4rpx;
}

.history-level {
  font-size: 24rpx;
  color: #10B981;
  display: block;
}

/* 按钮样式 */
.btn-text {
  color: #FFFFFF;
  position: relative;
  z-index: 1;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.camera-btn.outline .btn-text {
  color: #3B82F6;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 32rpx;
  }
  
  .camera-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .analysis-steps {
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .step-item {
    flex: 0 0 calc(50% - 8rpx);
  }
}