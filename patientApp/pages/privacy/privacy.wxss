/* patient-app/pages/privacy/privacy.wxss */

/* 容器样式 */
.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 区块样式 */
.section {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 设置列表 */
.setting-list {
  padding: 0;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: white;
  transition: background-color 0.3s;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f8f8f8;
}

.setting-content {
  flex: 1;
  margin-right: 20rpx;
}

.setting-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.setting-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 开关样式 */
.setting-switch {
  transform: scale(0.8);
}

/* 箭头样式 */
.setting-arrow {
  color: #ccc;
  font-size: 32rpx;
  font-weight: bold;
}

/* 底部保存按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 44rpx;
  border: none;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.save-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-text {
  color: white;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .page-header {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .page-title {
    font-size: 44rpx;
  }
  
  .section {
    margin: 20rpx 15rpx;
  }
  
  .setting-item {
    padding: 25rpx;
  }
  
  .setting-title {
    font-size: 28rpx;
  }
  
  .setting-desc {
    font-size: 22rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section {
  animation: fadeIn 0.5s ease-out;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
} 