/* patient-app/pages/help/help.wxss */

/* 页面容器，与首页一致的白色背景 */
.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  margin-bottom: 48rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.page-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
  display: block;
}

/* 搜索框 */
.search-section {
  margin-bottom: 48rpx;
}

.search-box {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.search-icon {
  font-size: 32rpx;
  color: var(--gray-500);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--gray-900);
  border: none;
  background: transparent;
}

.search-input::placeholder {
  color: #9CA3AF;
}

.search-clear {
  font-size: 36rpx;
  color: #6B7280;
  padding: 8rpx;
  margin-left: 16rpx;
}

/* 区域标题 */
.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 24rpx;
  color: var(--gray-600);
  display: block;
}

/* 快速入口 */
.quick-section {
  margin-bottom: 48rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.quick-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.quick-item:active {
  transform: scale(0.95);
}

.quick-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
  color: var(--primary-color);
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
}

/* 常见问题 */
.faq-section {
  margin-bottom: 48rpx;
}

.faq-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.faq-item {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: transparent;
  transition: all 0.3s ease;
}

.faq-question:active {
  background: rgba(0, 120, 255, 0.1);
}

.question-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
  line-height: 1.4;
}

.question-arrow {
  font-size: 24rpx;
  color: #6B7280;
  transition: transform 0.3s ease;
  margin-left: 16rpx;
}

.question-arrow.expanded {
  transform: rotate(90deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  background: rgba(59, 130, 246, 0.05);
}

.faq-answer.expanded {
  max-height: 500rpx;
  padding: 0 32rpx 32rpx;
}

.answer-text {
  font-size: 26rpx;
  color: var(--gray-700);
  line-height: 1.6;
  white-space: pre-line;
}

/* 使用指南 */
.guide-section {
  margin-bottom: 48rpx;
}

.guide-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.guide-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.guide-item:last-child {
  border-bottom: none;
}

.guide-item:active {
  background: rgba(0, 120, 255, 0.1);
}

.guide-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  color: var(--primary-color);
}

.guide-content {
  flex: 1;
  min-width: 0;
}

.guide-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.guide-desc {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
  line-height: 1.4;
}

.guide-arrow {
  font-size: 24rpx;
  color: #6B7280;
  margin-left: 16rpx;
  flex-shrink: 0;
}

