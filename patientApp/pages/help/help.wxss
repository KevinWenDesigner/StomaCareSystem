  flex-shrink: 0;
}

/* 按钮样式 */
.btn-text {
  color: #FFFFFF;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 32rpx;
  }
  
  .quick-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .faq-question,
  .guide-item,
  .contact-item,
  .feedback-item,
  .about-item {
    padding: 24rpx;
  }
} 