/* patient-app/pages/diary/diary.wxss */

.container {
  padding: 32rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 32rpx;
  color: var(--gray-600);
  display: block;
  font-weight: 500;
}

/* 快速记录 */
.quick-record {
  margin-bottom: 48rpx;
}

.record-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.title-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.record-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-800);
}

.edit-badge {
  background: var(--warning-light);
  color: var(--warning-dark);
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  border: 1rpx solid var(--warning-color);
}

.record-date {
  font-size: 28rpx;
  color: var(--gray-500);
}

/* 症状表单 */
.symptom-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-800);
}

.form-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.selection-count {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
  background: var(--primary-lighter);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 疼痛等级 */
.pain-scale {
  display: flex;
  gap: 12rpx;
}

.pain-item {
  flex: 1;
  background: var(--gray-100);
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid var(--gray-200);
  cursor: pointer;
  color: var(--gray-700);
}

.pain-item.active {
  background: var(--primary-color);
  color: #FFFFFF;
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.25);
}

.pain-item:active {
  transform: scale(0.95);
}

.pain-number {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.pain-desc {
  font-size: 24rpx;
  display: block;
}

/* 症状标签 */
.symptom-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.symptom-tag {
  background: var(--gray-100);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid var(--gray-200);
  color: var(--gray-700);
  position: relative;
  min-width: 120rpx;
  text-align: center;
}

/* 选中状态 - 增强视觉效果 */
.symptom-tag.selected {
  background: var(--primary-color);
  color: #FFFFFF;
  border: 3rpx solid var(--primary-dark);
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 255, 0.4);
  transform: scale(1.05);
  font-weight: 700;
}

/* 选中状态的文字样式 */
.symptom-tag.selected .tag-text {
  color: #FFFFFF;
  font-weight: 700;
}

.symptom-tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.tag-text {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

.symptom-tag.small {
  padding: 8rpx 16rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  border: 1rpx solid var(--primary-dark);
  box-shadow: 0 2rpx 8rpx rgba(0, 120, 255, 0.25);
  font-weight: 600;
}

.symptom-tag.small .tag-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid var(--gray-200);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--gray-800);
  background: #FFFFFF;
  transition: all 0.2s;
  box-sizing: border-box;
  resize: none;
  line-height: 1.5;
  word-wrap: break-word;
  overflow-wrap: break-word;
  overflow: hidden;
  max-width: 100%;
}

.form-textarea:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(0, 120, 255, 0.1);
}

/* 操作按钮容器 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

/* 提交按钮 */
.submit-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0, 120, 255, 0.25);
  transition: all 0.3s ease;
  flex: 1;
}

.submit-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 2rpx 8rpx rgba(0, 120, 255, 0.3);
}

/* 取消按钮 */
.cancel-btn {
  background: var(--gray-100);
  color: var(--gray-700);
  border: 2rpx solid var(--gray-300);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  flex: 1;
}

.cancel-btn:active {
  transform: scale(0.95);
  background: var(--gray-200);
}

/* 统计概览 */
.stats-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.stat-content {
  flex: 1;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--primary-color);
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: var(--gray-600);
  display: block;
}

/* 历史记录 */
.history-section {
  margin-bottom: 48rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: var(--gray-600);
  transition: all 0.3s ease;
  border: 1rpx solid var(--gray-200);
}

.filter-tab.active {
  background: var(--primary-color);
  color: #FFFFFF;
  font-weight: 600;
  border-color: var(--primary-color);
}

.filter-tab:active {
  transform: scale(0.95);
}

.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  display: block;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: var(--gray-500);
  display: block;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.record-item:active {
  transform: scale(0.98);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.record-date {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-800);
}

.record-pain {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pain-label {
  font-size: 24rpx;
  color: var(--gray-500);
}

.pain-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.record-symptoms {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.record-note {
  font-size: 28rpx;
  color: var(--gray-600);
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: block;
}

.record-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn {
  background: var(--primary-color);
  color: #FFFFFF;
}

.action-btn.danger {
  background: var(--danger-color);
  color: #FFFFFF;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .record-card {
    padding: 24rpx;
  }
  
  .form-textarea {
    padding: 20rpx;
    font-size: 26rpx;
  }
  
  .pain-scale {
    gap: 8rpx;
  }
  
  .pain-item {
    padding: 16rpx 12rpx;
  }
  
  .pain-number {
    font-size: 32rpx;
  }
  
  .pain-desc {
    font-size: 22rpx;
  }
}
