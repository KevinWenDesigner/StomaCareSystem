/* patient-app/pages/index/index.wxss */

/* 页面容器，统一深蓝色渐变背景，与其他页面一致 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%); /* 深蓝主色调 */
  padding: 40rpx; /* 增加页面边距 */
  box-sizing: border-box;
}

/* 欢迎区域，居中显示，文字为白色 */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  text-align: center;
  color: #FFFFFF;
}

.welcome-content {
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95); /* 白色半透明卡片 */
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1); /* 卡片阴影 */
  backdrop-filter: blur(20rpx); /* 毛玻璃效果 */
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 60rpx 40rpx; /* 增加内边距 */
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx; /* 增加间距 */
  display: block;
  color: #3B82F6; /* 主色蓝 */
}

.welcome-title {
  font-size: 52rpx; /* 增大字体 */
  font-weight: 700;
  margin-bottom: 24rpx; /* 增加间距 */
  display: block;
  color: #1E40AF; /* 深蓝主色 */
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 标题阴影 */
  line-height: 1.3; /* 增加行高 */
}

.welcome-subtitle {
  font-size: 36rpx; /* 增大字体 */
  margin-bottom: 16rpx; /* 增加间距 */
  opacity: 0.9;
  display: block;
  color: #1E40AF;
  line-height: 1.4; /* 增加行高 */
}

.welcome-desc {
  font-size: 30rpx; /* 增大字体 */
  opacity: 0.8;
  margin-bottom: 60rpx; /* 增加间距 */
  display: block;
  color: #3B82F6;
  line-height: 1.5; /* 增加行高 */
}

/* 统一按钮样式，主色蓝，白色文字，圆角阴影 */
.start-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%); /* 深蓝渐变 */
  color: #FFFFFF;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 56rpx; /* 增加按钮内边距 */
  font-size: 34rpx; /* 增大字体 */
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}

.btn-text {
  color: #FFFFFF;
}

/* 页面头部，标题样式统一 */
.page-header {
  margin-bottom: 48rpx; /* 增加底部间距 */
}

/* 用户信息头部 */
.user-info-header {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
  flex-shrink: 0;
  overflow: hidden;
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.user-welcome {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

/* 用户信息卡片中的文字样式 */
.user-welcome .page-subtitle {
  font-size: 36rpx;
  color: #1E40AF; /* 深蓝色，在白色背景上清晰可见 */
  display: block;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.user-care-info {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 8rpx;
  display: block;
  white-space: nowrap;
}

.page-title {
  font-size: 52rpx; /* 增大字体 */
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 20rpx; /* 增加间距 */
  display: block;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  line-height: 1.3; /* 增加行高 */
}

.page-subtitle {
  font-size: 42rpx; /* 增大字体，作为主要标题 */
  color: #FFFFFF;
  display: block;
  font-weight: 600;
  line-height: 1.4; /* 增加行高 */
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

/* 快速操作卡片区域，2列布局 */
.quick-actions {
  display: grid; /* 使用网格布局 */
  grid-template-columns: 1fr 1fr; /* 每行2列 */
  gap: 32rpx; /* 增加卡片间距 */
  margin-bottom: 60rpx; /* 增加底部间距 */
}

.action-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx; /* 增加内边距 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  text-align: center;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 72rpx; /* 增大图标 */
  display: block;
  margin-bottom: 20rpx; /* 增加间距 */
  color: #3B82F6;
}

.action-title {
  font-size: 36rpx; /* 增大字体 */
  font-weight: 700;
  color: #1E40AF;
  display: block;
  margin-bottom: 12rpx; /* 增加间距 */
  line-height: 1.3; /* 增加行高 */
}

.action-desc {
  font-size: 26rpx; /* 增大字体 */
  color: #3B82F6;
  display: block;
  line-height: 1.5; /* 增加行高 */
}

/* 今日状态卡片区域，2列布局 */
.status-grid {
  display: grid; /* 使用网格布局 */
  grid-template-columns: 1fr 1fr; /* 每行2列 */
  gap: 24rpx; /* 增加卡片间距 */
}

.status-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx 32rpx; /* 增加内边距 */
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-icon {
  font-size: 56rpx; /* 增大图标 */
  margin-bottom: 16rpx; /* 增加间距 */
  color: #3B82F6;
}

.status-number {
  font-size: 40rpx; /* 增大字体 */
  font-weight: 700;
  color: #1E40AF;
  line-height: 1.3; /* 增加行高 */
  margin-bottom: 8rpx; /* 增加与标签的间距 */
  display: block;
}

.status-label {
  font-size: 26rpx; /* 增大字体 */
  color: #3B82F6;
  line-height: 1.4; /* 增加行高 */
  display: block;
}

/* 记录列表、提醒列表等卡片统一 */
.records-list,
.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx; /* 增加间距 */
}

.record-item,
.reminder-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx 32rpx; /* 增加内边距 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx; /* 增加间距 */
}

.record-title {
  font-size: 34rpx; /* 增大字体 */
  font-weight: 700;
  color: #1E40AF;
  line-height: 1.3; /* 增加行高 */
}

.record-time {
  font-size: 26rpx; /* 增大字体 */
  color: #3B82F6;
  line-height: 1.4; /* 增加行高 */
}

.record-desc {
  font-size: 30rpx; /* 增大字体 */
  color: #3B82F6;
  margin-top: 12rpx; /* 增加间距 */
  line-height: 1.5; /* 增加行高 */
}

/* 空状态统一样式 */
.empty-state {
  text-align: center;
  color: #3B82F6;
  opacity: 0.8;
  margin: 48rpx 0; /* 增加上下间距 */
  padding: 40rpx 32rpx; /* 增加内边距 */
}

.empty-icon {
  font-size: 72rpx; /* 增大图标 */
  display: block;
  margin-bottom: 16rpx; /* 增加间距 */
}

.empty-text {
  font-size: 30rpx; /* 增大字体 */
  font-weight: 600;
  color: #1E40AF;
  line-height: 1.4; /* 增加行高 */
}

.empty-subtext {
  font-size: 26rpx; /* 增大字体 */
  color: #3B82F6;
  line-height: 1.5; /* 增加行高 */
}

/* 提醒按钮、完成按钮统一主色风格 */
.complete-btn,
.view-all-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 36rpx; /* 增加内边距 */
  font-size: 30rpx; /* 增大字体 */
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.complete-btn:active,
.view-all-btn:active {
  transform: scale(0.95);
}

.completed-icon {
  font-size: 40rpx; /* 增大图标 */
  color: #3B82F6;
  margin-left: 20rpx; /* 增加间距 */
}

/* 新增：区域标题样式优化 */
.section-header {
  margin-bottom: 32rpx; /* 增加底部间距 */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 38rpx; /* 增大字体 */
  font-weight: 700;
  color: #FFFFFF;
  display: block;
  line-height: 1.3; /* 增加行高 */
  margin-bottom: 8rpx; /* 增加与副标题的间距 */
}

.section-subtitle {
  font-size: 28rpx; /* 增大字体 */
  color: rgba(255, 255, 255, 0.8);
  display: block;
  line-height: 1.4; /* 增加行高 */
}

/* 新增：状态区域和记录区域的间距 */
.status-section,
.records-section,
.reminders-section {
  margin-bottom: 60rpx; /* 增加区域间距 */
}

/* 新增：提醒项布局优化 */
.reminder-item {
  display: flex;
  align-items: center;
  gap: 20rpx; /* 增加元素间距 */
}

.reminder-icon {
  font-size: 40rpx; /* 增大图标 */
  color: #3B82F6;
  flex-shrink: 0;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 32rpx; /* 增大字体 */
  font-weight: 600;
  color: #1E40AF;
  display: block;
  margin-bottom: 8rpx; /* 增加间距 */
  line-height: 1.3; /* 增加行高 */
}

.reminder-time {
  font-size: 26rpx; /* 增大字体 */
  color: #3B82F6;
  line-height: 1.4; /* 增加行高 */
} 