/* patient-app/pages/index/index.wxss */

/* 页面容器，白色背景，Figma 风格 */
.container {
  min-height: 100vh;
  background: var(--bg-secondary); /* 浅灰白色背景 */
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 欢迎区域，居中显示 */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  text-align: center;
  padding: 0;
}

.welcome-content {
  width: 90%;
  max-width: 650rpx;
  background: #FFFFFF; /* 纯白卡片 */
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08); /* 柔和阴影 */
  border: 1rpx solid var(--gray-200);
  padding: 100rpx 60rpx;
}

.welcome-icon {
  font-size: 180rpx;
  margin-bottom: 60rpx;
  display: block;
  color: var(--primary-color); /* Figma 蓝 */
}

.welcome-title {
  font-size: 64rpx;
  font-weight: 800;
  margin-bottom: 32rpx;
  display: block;
  color: var(--gray-900); /* 深灰色标题 */
  line-height: 1.2;
}

.welcome-subtitle {
  font-size: 42rpx;
  margin-bottom: 24rpx;
  display: block;
  color: var(--gray-800);
  line-height: 1.4;
  font-weight: 600;
}

.welcome-desc {
  font-size: 36rpx;
  margin-bottom: 80rpx;
  display: block;
  color: var(--gray-600);
  line-height: 1.5;
}

/* 统一按钮样式，Figma 风格蓝色 */
.start-btn {
  background: var(--primary-color); /* Figma 蓝 */
  color: #FFFFFF;
  border: none;
  border-radius: 20rpx;
  padding: 36rpx 80rpx;
  font-size: 40rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 255, 0.25); /* 柔和阴影 */
  transition: all 0.3s ease;
  width: 100%;
  max-width: 400rpx;
}

.start-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.25);
}

.btn-text {
  color: #FFFFFF;
}

/* 页面头部，标题样式统一 */
.page-header {
  margin-bottom: 48rpx; /* 增加底部间距 */
}

/* 用户信息头部 */
.user-info-header {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.15);
  flex-shrink: 0;
  overflow: hidden;
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.user-welcome {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

/* 用户信息卡片中的文字样式 */
.user-welcome .page-subtitle {
  font-size: 36rpx;
  color: var(--gray-900); /* 深灰色 */
  display: block;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.user-care-info {
  font-size: 24rpx;
  color: var(--gray-500);
  margin-top: 8rpx;
  display: block;
  white-space: nowrap;
}

.page-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--gray-900); /* 深灰色标题 */
  margin-bottom: 20rpx;
  display: block;
  line-height: 1.3;
}

.page-subtitle {
  font-size: 42rpx;
  color: var(--gray-700);
  display: block;
  font-weight: 600;
  line-height: 1.4;
}

/* 快速操作卡片区域，2列布局 */
.quick-actions {
  display: grid; /* 使用网格布局 */
  grid-template-columns: 1fr 1fr; /* 每行2列 */
  gap: 32rpx; /* 增加卡片间距 */
  margin-bottom: 60rpx; /* 增加底部间距 */
}

.action-card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  text-align: center;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 20rpx;
  color: var(--primary-color); /* Figma 蓝 */
}

.action-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.action-desc {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
  line-height: 1.5;
}

/* 今日状态卡片区域，2列布局 */
.status-grid {
  display: grid; /* 使用网格布局 */
  grid-template-columns: 1fr 1fr; /* 每行2列 */
  gap: 24rpx; /* 增加卡片间距 */
}

.status-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.status-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
  color: var(--primary-color); /* Figma 蓝 */
}

.status-number {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
  margin-bottom: 8rpx;
  display: block;
}

.status-label {
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.4;
  display: block;
}

/* 记录列表、提醒列表等卡片统一 */
.records-list,
.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx; /* 增加间距 */
}

.record-item,
.reminder-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx; /* 增加间距 */
}

.record-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.record-time {
  font-size: 26rpx;
  color: var(--gray-500);
  line-height: 1.4;
}

.record-desc {
  font-size: 30rpx;
  color: var(--gray-700);
  margin-top: 12rpx;
  line-height: 1.5;
}

/* 空状态统一样式 */
.empty-state {
  text-align: center;
  margin: 48rpx 0;
  padding: 40rpx 32rpx;
}

.empty-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 16rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-700);
  line-height: 1.4;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--gray-500);
  line-height: 1.5;
}

/* 提醒按钮、完成按钮统一主色风格 */
.complete-btn,
.view-all-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 36rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
  transition: all 0.3s ease;
}

.complete-btn:active,
.view-all-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.completed-icon {
  font-size: 40rpx;
  color: var(--primary-color);
  margin-left: 20rpx;
}

/* 新增：区域标题样式优化 */
.section-header {
  margin-bottom: 32rpx; /* 增加底部间距 */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  line-height: 1.3;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
  display: block;
  line-height: 1.4;
}

/* 新增：状态区域和记录区域的间距 */
.status-section,
.records-section,
.reminders-section {
  margin-bottom: 60rpx; /* 增加区域间距 */
}

/* 新增：提醒项布局优化 */
.reminder-item {
  display: flex;
  align-items: center;
  gap: 20rpx; /* 增加元素间距 */
}

.reminder-icon {
  font-size: 40rpx;
  color: var(--primary-color);
  flex-shrink: 0;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.reminder-time {
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.4;
} 