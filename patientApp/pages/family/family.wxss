/* patient-app/pages/family/family.wxss */
/* 统一Figma风格 - 与首页一致 */

.container {
  min-height: 100vh;
  background: var(--bg-secondary); /* 浅灰白色背景，与首页一致 */
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 页面头部 - Figma风格 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: 700;
  color: var(--gray-900);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  display: flex;
  align-items: center;
}

.add-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background: var(--primary-lighter);
  border: none;
  transition: all 0.3s ease;
}

.add-btn:active {
  background: var(--primary-color);
  color: #FFFFFF;
  transform: scale(0.95);
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
  opacity: 0.8;
}

/* 家属管理内容 */
.family-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 标签页导航 - Figma风格 */
.tab-navigation {
  display: flex;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.tab-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-700);
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
  font-weight: 700;
}

/* 联系人页面 */
.contacts-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}



.family-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.family-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.family-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.family-item:last-child {
  margin-bottom: 0;
}

.member-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.member-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.15);
}

.avatar-text {
  font-size: 32rpx;
}

.member-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.member-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.emergency-badge {
  background: #EF4444;
  color: #FFFFFF;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.badge-text {
  color: #FFFFFF;
}

.member-relationship {
  font-size: 26rpx;
  color: var(--gray-600);
}

.member-phone {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.member-last-contact {
  font-size: 24rpx;
  color: var(--gray-500);
}

.member-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 80rpx;
  text-align: center;
}

.contact-btn {
  background: var(--success-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 200, 117, 0.2);
}

.contact-btn:active {
  transform: scale(0.95);
  background: var(--success-dark);
}

.edit-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 120, 255, 0.2);
}

.edit-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.emergency-btn {
  background: var(--gray-600);
  color: #FFFFFF;
}

.emergency-btn:active {
  transform: scale(0.95);
}

.emergency-btn.active {
  background: var(--danger-color);
}

.delete-btn {
  background: var(--danger-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(255, 51, 102, 0.2);
}

.delete-btn:active {
  transform: scale(0.95);
  background: var(--danger-dark);
}

.action-text {
  color: inherit;
}

/* 紧急联系人页面 */
.emergency-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}



.emergency-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.emergency-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid var(--danger-color);
}

.emergency-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.emergency-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--danger-color);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 51, 102, 0.15);
}

.emergency-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.emergency-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.emergency-relationship {
  font-size: 26rpx;
  color: var(--gray-600);
}

.emergency-phone {
  font-size: 26rpx;
  color: var(--danger-color);
  font-weight: 600;
}

.emergency-actions {
  display: flex;
  gap: 12rpx;
}

.cancel-btn {
  background: var(--gray-600);
  color: #FFFFFF;
}

.cancel-btn:active {
  transform: scale(0.95);
  background: var(--gray-700);
}

.empty-emergency {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--gray-900);
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
}



/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #374151;
}

.modal-close {
  font-size: 36rpx;
  color: #6B7280;
  font-weight: bold;
}

.modal-body {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #374151;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 40rpx;
}

.form-input:focus {
  border-color: #8B5CF6;
  background-color: rgba(139, 92, 246, 0.02);
}

.relationship-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.relationship-option {
  padding: 12rpx 20rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #374151;
  transition: all 0.3s ease;
}

.relationship-option.selected {
  background: #8B5CF6;
  color: #FFFFFF;
  border-color: #8B5CF6;
}

.option-text {
  color: inherit;
}

.permission-selector {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.permission-option {
  padding: 16rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.permission-option.selected {
  background: rgba(139, 92, 246, 0.1);
  border-color: #8B5CF6;
}

.option-desc {
  font-size: 22rpx;
  color: #6B7280;
  margin-top: 4rpx;
  display: block;
}

.permission-member {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
}

.permission-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.permission-item.selected {
  background: rgba(139, 92, 246, 0.1);
  border-color: #8B5CF6;
}

.permission-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.permission-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

.permission-desc {
  font-size: 22rpx;
  color: #6B7280;
}

.permission-checkbox {
  flex-shrink: 0;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 6rpx;
  position: relative;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--primary-color);
  border-color: var(--primary-color);
}

.checkbox.checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: bold;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #E5E7EB;
}

.modal-btn {
  flex: 1;
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.modal-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.modal-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.4);
}

.modal-btn.secondary {
  background: #F3F4F6;
  color: #374151;
  border: 2rpx solid #D1D5DB;
}

.modal-btn.secondary:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
} 