/* patient-app/pages/education/course-list/course-list.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-right {
  width: 60rpx;
}

/* 搜索和筛选区域 */
.search-section {
  margin-bottom: 32rpx;
}

.search-box {
  position: relative;
  margin-bottom: 32rpx;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #6B7280;
  z-index: 1;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 0 24rpx 0 64rpx;
  font-size: 28rpx;
  color: #1F2937;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  backdrop-filter: blur(20rpx);
}

.search-input::placeholder {
  color: #9CA3AF;
}

.filter-section {
  margin-bottom: 24rpx;
}

.filter-tabs {
  display: flex;
  gap: 32rpx;
  overflow-x: auto;
  padding: 16rpx 0;
}

.filter-tab {
  padding: 24rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tab.active {
  background: rgba(255, 255, 255, 0.95);
  border-color: #3B82F6;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.tab-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.filter-tab.active .tab-text {
  color: #1E40AF;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 0.8;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.course-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.course-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E40AF;
  flex: 1;
  line-height: 1.3;
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 16rpx;
}

.level-1 {
  background: #DBEAFE;
  color: #1E40AF;
}

.level-2 {
  background: #FEF3C7;
  color: #D97706;
}

.level-3 {
  background: #FEE2E2;
  color: #DC2626;
}

.level-text {
  font-size: 24rpx;
  font-weight: 600;
}

.course-desc {
  font-size: 28rpx;
  color: #3B82F6;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.course-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #6B7280;
}

.course-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #6B7280;
}

.course-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.detail {
  background: #F3F4F6;
  color: #374151;
  border: 2rpx solid #D1D5DB;
}

.action-btn.detail:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.action-btn.primary {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.btn-text {
  color: inherit;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #FFFFFF;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
} 