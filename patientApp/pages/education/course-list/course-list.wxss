/* patient-app/pages/education/course-list/course-list.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--gray-900);
  line-height: 1.3;
}

.header-right {
  width: 60rpx;
}

/* 搜索和筛选区域 */
.search-section {
  margin-bottom: 32rpx;
}

.search-box {
  position: relative;
  margin-bottom: 24rpx;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: var(--gray-500);
  z-index: 1;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 24rpx 0 64rpx;
  font-size: 30rpx;
  color: var(--gray-900);
  border: 1rpx solid var(--gray-200);
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-input::placeholder {
  color: var(--gray-400);
}

.filter-section {
  margin-bottom: 24rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding: 8rpx 0;
}

.filter-tab {
  padding: 16rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 1rpx solid var(--gray-200);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  white-space: nowrap;
  flex-shrink: 0;
}

.filter-tab.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-700);
}

.filter-tab.active .tab-text {
  color: #FFFFFF;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.course-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.course-card {
  width: 100%;
}

.course-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.course-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-900);
  flex: 1;
  line-height: 1.3;
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.level-1 {
  background: #DBEAFE;
  color: #1E40AF;
}

.level-2 {
  background: #FEF3C7;
  color: #D97706;
}

.level-3 {
  background: #FEE2E2;
  color: #DC2626;
}

.level-text {
  font-size: 24rpx;
  font-weight: 600;
}

.course-desc {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.course-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 26rpx;
  color: var(--gray-600);
}

.course-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--gray-200);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: var(--gray-600);
}

.course-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.detail {
  background: #FFFFFF;
  color: var(--gray-700);
  border: 2rpx solid var(--gray-300);
}

.action-btn.detail:active {
  background: var(--bg-secondary);
  transform: scale(0.95);
}

.action-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.action-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.btn-text {
  color: inherit;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.empty-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 24rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.empty-subtext {
  font-size: 28rpx;
  color: var(--gray-500);
  display: block;
  line-height: 1.5;
}
