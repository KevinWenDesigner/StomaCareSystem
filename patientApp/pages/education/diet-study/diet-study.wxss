/* patient-app/pages/education/diet-study/diet-study.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--gray-900);
  line-height: 1.3;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
}

/* 学习内容 */
.study-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 学习进度 */
.progress-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: var(--gray-200);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: var(--gray-600);
}

/* 当前章节 */
.chapter-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.chapter-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  flex: 1;
  line-height: 1.3;
}

.chapter-duration {
  font-size: 26rpx;
  color: var(--gray-500);
  margin-left: 16rpx;
}

.chapter-content {
  margin-top: 16rpx;
}

.content-card {
  background: var(--bg-secondary);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1rpx solid var(--gray-200);
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

/* 营养知识 */
.nutrition-knowledge {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.knowledge-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid var(--gray-200);
}

.knowledge-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.knowledge-text {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.4;
}

/* 饮食建议 */
.diet-tips {
  background: #FEF3C7;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #F59E0B;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #D97706;
  display: block;
  margin-bottom: 12rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #92400E;
  line-height: 1.5;
}

/* 章节列表 */
.chapters-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.chapter-item:active {
  transform: scale(0.98);
}

.chapter-item.active {
  background: #DBEAFE;
  border-color: var(--primary-color);
}

.chapter-item.completed {
  background: #D1FAE5;
  border-color: #059669;
}

.chapter-info {
  flex: 1;
}

.chapter-number {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.chapter-item.completed .chapter-number {
  color: #059669;
}

.status-completed {
  font-size: 24rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-current {
  font-size: 24rpx;
  color: var(--primary-color);
  background: #DBEAFE;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-pending {
  font-size: 24rpx;
  color: var(--gray-500);
  background: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid var(--gray-300);
}

/* 营养计算器弹窗 */
.calculator-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1001;
}

.calculator-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.calculator-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
}

.calculator-subtitle {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
}

.calculator-content {
  margin-top: 16rpx;
}

/* 输入区域 */
.input-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.input-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.input-field {
  padding: 20rpx;
  border: 1rpx solid var(--gray-300);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  color: var(--gray-900);
}

.picker-text {
  color: var(--gray-700);
}

/* 计算结果 */
.result-section {
  background: #DBEAFE;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  display: block;
  margin-bottom: 16rpx;
}

.result-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.result-label {
  font-size: 24rpx;
  color: var(--gray-700);
}

.result-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

/* 计算器按钮 */
.calculator-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.calculator-btn {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.calculator-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.calculator-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

.calculator-btn.secondary {
  background: #FFFFFF;
  color: var(--gray-700);
  border: 2rpx solid var(--gray-300);
}

.calculator-btn.secondary:active {
  background: var(--bg-secondary);
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
}

/* 食谱推荐弹窗 */
.recipe-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.recipe-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.recipe-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
}

.recipe-subtitle {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
}

.recipe-content {
  margin-top: 16rpx;
}

.recipe-item {
  background: var(--bg-secondary);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid var(--gray-200);
}

.recipe-meal {
  margin-bottom: 12rpx;
}

.meal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 4rpx;
}

.meal-subtitle {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
}

.recipe-desc {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.4;
  display: block;
  margin-bottom: 16rpx;
}

.food-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.food-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid var(--gray-200);
}

.food-name {
  font-size: 28rpx;
  color: var(--gray-900);
  flex: 1;
}

.food-amount {
  font-size: 26rpx;
  color: var(--gray-600);
  margin: 0 16rpx;
}

.food-calories {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.recipe-summary {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.total-calories {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.recipe-tips {
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.4;
}

.recipe-btn {
  background: var(--primary-color);
  color: #FFFFFF;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
}

.recipe-btn:active {
  transform: scale(0.95);
  background: var(--primary-dark);
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--gray-200);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.action-btn {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 255, 0.25);
}

.action-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.25);
}

.action-btn.secondary {
  background: #FFFFFF;
  color: var(--gray-700);
  border: 2rpx solid var(--gray-300);
}

.action-btn.secondary:active {
  background: var(--bg-secondary);
  transform: scale(0.95);
}
