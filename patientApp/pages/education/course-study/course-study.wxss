/* patient-app/pages/education/course-study/course-study.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  padding: 32rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 0.8;
}

/* 学习内容 */
.study-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 学习进度 */
.progress-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E40AF;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: #3B82F6;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #E5E7EB;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #6B7280;
}

/* 当前章节 */
.chapter-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.chapter-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E40AF;
  flex: 1;
  line-height: 1.3;
}

.chapter-duration {
  font-size: 24rpx;
  color: #6B7280;
  margin-left: 16rpx;
}

.chapter-content {
  margin-top: 16rpx;
}

.content-card {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E7EB;
}

.content-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E40AF;
  display: block;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.learning-points {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.point-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

.point-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.point-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.4;
}

/* 章节列表 */
.chapters-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E40AF;
}

.section-subtitle {
  font-size: 24rpx;
  color: #3B82F6;
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.chapter-item.active {
  background: #DBEAFE;
  border-color: #3B82F6;
}

.chapter-item.completed {
  background: #D1FAE5;
  border-color: #059669;
}

.chapter-info {
  flex: 1;
}

.chapter-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.chapter-number {
  font-size: 24rpx;
  font-weight: 600;
  color: #1E40AF;
}

.chapter-duration {
  font-size: 22rpx;
  color: #6B7280;
}

.chapter-title {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.4;
}

.chapter-status {
  margin-left: 16rpx;
}

.status-completed {
  font-size: 22rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-current {
  font-size: 22rpx;
  color: #1E40AF;
  background: #DBEAFE;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-pending {
  font-size: 22rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 课程完成提示 */
.completion-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.completion-card {
  text-align: center;
  padding: 40rpx 32rpx;
}

.completion-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #059669;
  display: block;
  margin-bottom: 16rpx;
}

.completion-text {
  font-size: 28rpx;
  color: #374151;
  display: block;
  margin-bottom: 12rpx;
}

.completion-desc {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 100%;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.action-btn.secondary {
  background: #F3F4F6;
  color: #374151;
  border: 2rpx solid #D1D5DB;
}

.action-btn.secondary:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
} 