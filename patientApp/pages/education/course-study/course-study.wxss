/* patient-app/pages/education/course-study/course-study.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--gray-900);
  line-height: 1.3;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
}

/* 学习内容 */
.study-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 学习进度 */
.progress-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: var(--gray-200);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: var(--gray-600);
}

/* 当前章节 */
.chapter-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.chapter-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  flex: 1;
  line-height: 1.3;
}

.chapter-duration {
  font-size: 26rpx;
  color: var(--gray-500);
  margin-left: 16rpx;
}

.chapter-content {
  margin-top: 16rpx;
}

.content-card {
  background: var(--bg-secondary);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1rpx solid var(--gray-200);
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.learning-points {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.point-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid var(--gray-200);
}

.point-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.point-text {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.4;
}

/* 章节列表 */
.chapters-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.chapter-item:active {
  transform: scale(0.98);
}

.chapter-item.active {
  background: #DBEAFE;
  border-color: var(--primary-color);
}

.chapter-item.completed {
  background: #D1FAE5;
  border-color: #059669;
}

.chapter-info {
  flex: 1;
}

.chapter-number {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.chapter-item.completed .chapter-number {
  color: #059669;
}

.status-completed {
  font-size: 24rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-current {
  font-size: 24rpx;
  color: var(--primary-color);
  background: #DBEAFE;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-pending {
  font-size: 24rpx;
  color: var(--gray-500);
  background: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid var(--gray-300);
}

/* 课程完成提示 */
.completion-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.completion-card {
  text-align: center;
  padding: 40rpx 32rpx;
}

.completion-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.completion-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #059669;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.completion-text {
  font-size: 32rpx;
  color: var(--gray-700);
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.completion-desc {
  font-size: 28rpx;
  color: var(--gray-500);
  display: block;
  line-height: 1.5;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--gray-200);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.action-btn {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 255, 0.25);
}

.action-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.25);
}

.action-btn.secondary {
  background: #FFFFFF;
  color: var(--gray-700);
  border: 2rpx solid var(--gray-300);
}

.action-btn.secondary:active {
  background: var(--bg-secondary);
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
}
