/* 富文本内容样式 */
.rich-content {
  margin-top: 24rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

/* 章节时长提示 */
.chapter-meta {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #f0f7ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 26rpx;
  color: #666;
}

.meta-value {
  font-size: 26rpx;
  color: #1989fa;
  margin-left: 8rpx;
  font-weight: 500;
}

/* 重新定义学习要点样式 */
.learning-points {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #fffbe6;
  border-radius: 12rpx;
  border-left: 4rpx solid #faad14;
}

.points-header {
  margin-bottom: 20rpx;
}

.points-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.learning-points .point-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
  background: transparent;
}

.point-bullet {
  font-size: 32rpx;
  color: #faad14;
  margin-right: 12rpx;
  flex-shrink: 0;
  line-height: 1.5;
}

.learning-points .point-text {
  flex: 1;
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

