/* patient-app/pages/education/education.wxss */

.container {
  padding: 32rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 32rpx;
  color: var(--gray-600);
  display: block;
  font-weight: 500;
}

/* 课程分类 */
.category-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
}

.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.category-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.category-card:active {
  transform: scale(0.95);
}

.category-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--gray-800);
  display: block;
  margin-bottom: 12rpx;
}

.category-desc {
  font-size: 24rpx;
  color: var(--gray-600);
  display: block;
  line-height: 1.4;
}

/* 推荐课程 */
.recommended-section {
  margin-bottom: 48rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.course-item:active {
  transform: scale(0.98);
}

.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--gray-800);
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.level-1 {
  background: var(--success-light);
  color: var(--success-color);
}

.level-2 {
  background: var(--warning-light);
  color: var(--warning-color);
}

.level-3 {
  background: var(--danger-light);
  color: var(--danger-color);
}

.course-desc {
  font-size: 28rpx;
  color: var(--gray-600);
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.course-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 24rpx;
  color: var(--gray-500);
}

.course-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--gray-200);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: var(--gray-500);
  text-align: right;
}

/* 学习进度 */
.progress-section {
  margin-bottom: 48rpx;
}

.progress-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.progress-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.progress-card:active {
  transform: scale(0.98);
}

.progress-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.progress-content {
  flex: 1;
}

.progress-number {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--primary-color);
  display: block;
  margin-bottom: 8rpx;
}

.progress-label {
  font-size: 28rpx;
  color: var(--gray-600);
  display: block;
}

/* 最近学习 */
.recent-section {
  margin-bottom: 48rpx;
}

.view-all-btn {
  background: var(--primary-color);
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  transition: all 0.3s ease;
}

.view-all-btn:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  display: block;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: var(--gray-500);
  display: block;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recent-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 36rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: scale(0.98);
}

.recent-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: var(--gray-400);
  margin-top: 4rpx;
}

.recent-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.recent-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--gray-800);
  display: block;
  line-height: 1.4;
}

.recent-time {
  font-size: 22rpx;
  color: var(--gray-400);
  display: block;
}

.recent-progress-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
  display: block;
  margin-top: 4rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .category-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .progress-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .category-card {
    padding: 28rpx;
  }
  
  .course-item {
    padding: 28rpx;
  }
  
  .progress-card {
    padding: 28rpx;
  }
}
