/* patient-app/pages/education/education.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--gray-900);
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.page-subtitle {
  font-size: 32rpx;
  color: var(--gray-600);
  display: block;
  font-weight: 500;
  line-height: 1.4;
}

/* 课程分类 */
.category-section {
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--gray-600);
  line-height: 1.4;
  display: block;
}

.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.category-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.category-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.category-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 20rpx;
  color: var(--primary-color);
}

.category-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.category-desc {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
  line-height: 1.5;
}

/* 推荐课程 */
.recommended-section {
  margin-bottom: 60rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.course-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.course-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.level-1 {
  background: #DBEAFE;
  color: #1E40AF;
}

.level-2 {
  background: #FEF3C7;
  color: #D97706;
}

.level-3 {
  background: #FEE2E2;
  color: #DC2626;
}

.course-desc {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.course-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 26rpx;
  color: var(--gray-600);
}

.course-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--gray-200);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: var(--gray-600);
  text-align: right;
}

/* 学习进度 */
.progress-section {
  margin-bottom: 60rpx;
}

.progress-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.progress-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.progress-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.progress-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  color: var(--primary-color);
}

.progress-content {
  flex: 1;
}

.progress-number {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.progress-label {
  font-size: 26rpx;
  color: var(--gray-600);
  display: block;
  line-height: 1.4;
}

/* 最近学习 */
.recent-section {
  margin-bottom: 60rpx;
}

.view-all-btn {
  background: var(--primary-color);
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 36rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.2);
  transition: all 0.3s ease;
}

.view-all-btn:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

.empty-state {
  text-align: center;
  padding: 48rpx 32rpx;
  margin: 0;
}

.empty-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 16rpx;
  color: var(--gray-400);
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-700);
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--gray-500);
  display: block;
  line-height: 1.5;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.recent-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.recent-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: var(--primary-color);
  margin-top: 4rpx;
}

.recent-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.recent-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--gray-900);
  display: block;
  line-height: 1.3;
}

.recent-time {
  font-size: 26rpx;
  color: var(--gray-500);
  display: block;
  line-height: 1.4;
}

.recent-progress-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
  display: block;
  margin-top: 4rpx;
}

/* 按钮文字 */
.btn-text {
  color: #FFFFFF;
}
