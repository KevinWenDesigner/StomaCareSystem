/* patient-app/pages/education/course-detail/course-detail.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: var(--gray-900);
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--gray-900);
  line-height: 1.3;
}

.header-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--gray-600);
}

/* 课程详情 */
.course-detail {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 课程基本信息 */
.course-info {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.course-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--gray-900);
  flex: 1;
  line-height: 1.3;
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.level-1 {
  background: #DBEAFE;
  color: #1E40AF;
}

.level-2 {
  background: #FEF3C7;
  color: #D97706;
}

.level-3 {
  background: #FEE2E2;
  color: #DC2626;
}

.level-text {
  font-size: 24rpx;
  font-weight: 600;
}

.course-desc {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.course-meta {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 26rpx;
  color: var(--gray-600);
}

/* 点赞按钮样式 */
.meta-like {
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(239, 68, 68, 0.05);
}

.meta-like:active {
  transform: scale(0.95);
  background: rgba(239, 68, 68, 0.15);
}

.meta-like .meta-text {
  color: #EF4444;
  font-weight: 600;
}

/* 学习进度 */
.progress-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.3;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--primary-color);
  line-height: 1.4;
}

.progress-card {
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: var(--gray-200);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: var(--gray-600);
}

/* 课程章节 */
.chapters-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
}

.chapter-info {
  flex: 1;
}

.chapter-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.chapter-number {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.chapter-duration {
  font-size: 24rpx;
  color: var(--gray-500);
}

.chapter-title {
  font-size: 30rpx;
  color: var(--gray-900);
  line-height: 1.4;
  font-weight: 600;
}

.chapter-status {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.status-completed {
  font-size: 24rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-pending {
  font-size: 24rpx;
  color: var(--gray-500);
  background: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid var(--gray-300);
}

/* 课程介绍 */
.intro-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.intro-content {
  margin-top: 16rpx;
}

.intro-text {
  font-size: 30rpx;
  color: var(--gray-700);
  line-height: 1.6;
}

/* 学习目标 */
.objectives-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid var(--gray-200);
}

.objectives-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
}

.objective-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  border: 1rpx solid var(--gray-200);
}

.objective-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.objective-text {
  font-size: 28rpx;
  color: var(--gray-700);
  line-height: 1.4;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--gray-200);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.action-btn {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 255, 0.25);
}

.action-btn.primary:active {
  transform: scale(0.95);
  background: var(--primary-dark);
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 255, 0.25);
}

.btn-text {
  color: inherit;
}
