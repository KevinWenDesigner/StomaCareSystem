/* patient-app/pages/education/course-detail/course-detail.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  padding: 32rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 20rpx 0;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-right: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 0.8;
}

/* 课程详情 */
.course-detail {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 课程基本信息 */
.course-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.course-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1E40AF;
  flex: 1;
  line-height: 1.3;
}

.course-level {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 16rpx;
}

.level-1 {
  background: #DBEAFE;
  color: #1E40AF;
}

.level-2 {
  background: #FEF3C7;
  color: #D97706;
}

.level-3 {
  background: #FEE2E2;
  color: #DC2626;
}

.level-text {
  font-size: 24rpx;
  font-weight: 600;
}

.course-desc {
  font-size: 30rpx;
  color: #3B82F6;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.course-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #6B7280;
}

/* 学习进度 */
.progress-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E40AF;
}

.section-subtitle {
  font-size: 24rpx;
  color: #3B82F6;
}

.progress-card {
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #E5E7EB;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #6B7280;
}

/* 课程章节 */
.chapters-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

.chapter-info {
  flex: 1;
}

.chapter-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.chapter-number {
  font-size: 24rpx;
  font-weight: 600;
  color: #1E40AF;
}

.chapter-duration {
  font-size: 22rpx;
  color: #6B7280;
}

.chapter-title {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.4;
}

.chapter-status {
  margin-left: 16rpx;
}

.status-completed {
  font-size: 22rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-pending {
  font-size: 22rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 课程介绍 */
.intro-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.intro-content {
  margin-top: 16rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}

/* 学习目标 */
.objectives-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.objectives-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
}

.objective-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

.objective-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.objective-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.4;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 100%;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.btn-text {
  color: inherit;
} 